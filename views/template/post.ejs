<div class='panel panel-default col-xs-offset-2 col-xs-8 post-default post-template'>
    <% if(post.UserId === userId){ %>
      <div style="position:relative;float:right;">                
        <form action="/posts/<%= post.id %>/delete" method="post">
          <input style="display:none" name="id" type="text" value="<%= post.id %>">
          <button style="border:none;background:none;" type="submit">
          <span class="icon-deleteiconbox"></span> delete
          </button>
        </form> 
      </div>
      <button onclick="editpost('<%=post.id%>')" style="border:none;background:none;"><span style="font-size: 1.3em" class="icon-editiconbox"></span> edit</button>
      <div class='panel panel-default post-default' style='padding:20px;margin-top:25px;min-height:180px; background-color: white;border-radius:15px;'>
      <form id='form<%=post.id%>' style='display:none' action="">
        <input name='id' style='display:none' type="text">
        <textarea style='height:70px; width:900px;display:flex;border-radius:10px;' name="content" cols="30" rows="10"><%=post.cleanTag%></textarea>
        <button class="btn btn-default" type="submit">edit post</button>
      </form>
  <% }else{ %>
      <div class='panel panel-default post-default' style='padding:20px;margin-top:10px;min-height:180px; background-color: white;border-radius:15px;'>
  <% } %>
    <div id='postcontent<%=post.id%>'>
      <%- post.content %>
    </div>
  </div>

  <% if (username) { %>
    <div style="width:100%;height:30px;">                
        <form action="/posts/<%= post.id %>/comments/add" method="POST">
          <input type="text" name="content" style="border-radius:15px;border:1px rgba(0, 0, 0, 0.4) solid;width:80%;" placeholder=" add comment...">
            <button type="submit" style='background:none;border-radius:5px;border:1px rgba(0, 0, 0, 0.4) solid;'>Add comment</button>
        </form>
    </div>
  <% } %>

  <div id='hidecomment<%=post.id%>' class='panel panel-default post-default' style='padding-top:5px;padding-left:15px;margin-top:10px;height:35px; background-color: rgba(255, 255, 255, 0.445);border-radius:20px;'>
    <a onclick="showComment('<%=post.id%>')" style='font-size:0.8em;'>View Comments (<%=post.Comments.length%>)</a>
  </div>
  <div id='showcomment<%=post.id%>' class='panel panel-default post-default' style='padding:15px;padding-top:5px;padding-left:15px;margin-top:10px;min-height:100px; background-color: rgba(255, 255, 255, 0.445);border-radius:20px;display:none;'>
    <a onclick="hideComment('<%=post.id%>')" style='font-size:0.8em;'>Hide Comments</a>

    <div id='showcomment<%=post.id%>'>
    <% for(let j in post.Comments){ %>
      <div class='panel panel-default post-default comment-template'>
        <p style='font-size:0.8em;'><%=post.Comments[j].content%></p>
      </div>
    <% } %>
    </div>
  </div>
</div>
</div>